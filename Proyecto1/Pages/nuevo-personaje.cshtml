@page
@model Proyecto1.Pages.nuevo_personajeModel
@{
}
<div class="d-flex justify-content-center">
	<div class="card col-6">
		<div class="card-header bg-primary text-white">
			<h3>Nuevo Personaje</h3>
		</div>
		<form method="post">
			<div class="card-body">
				<div class="form-group">
					<label>Nombre</label>
					<input type="text" maxlength="50" class="form-control" />
					<span class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Nombre Real</label>
					<input type="text" maxlength="50" class="form-control" />
				</div>
				<div class="form-group">
					<label>Super Poder</label>
					<textarea maxlength="255" rows=3 class="form-control"></textarea>
				</div>
				<div class="form-group">
					<label>Fecha Nacimiento</label>
					<input type="date" class="form-control" />
				</div>
				<div class="form-group">
					<label>Categoria</label>
					<select class="form-control">
						<option value="">--Seleccione--</option>
						<option value="1">Categoria1</option>
						<option value="2">Categoria2</option>
						<option value="3">Categoria3</option>
					</select>
				</div>
				<div class="form-group">
					<label>Imagen</label>
					<input type="text" class="form-control" />
				</div>
			</div>
			<div class="card-footer d-flex justify-content-between">
				<button type="submit" class="btn btn-success">Guardar</button>
				<a asp-page="/personajes" class="btn btn-secondary">Cancelar</a>
			</div>
		</form>

	</div>
</div>